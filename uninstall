#!/bin/bash

# Logging functions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log() {
    echo -e "\033[1;36mðŸ’¡ [INFO]\033[0m $1"
}
success() {
    echo -e "\033[1;32mâœ… [SUCCESS]\033[0m $1"
}
warning() {
    echo -e "\033[1;33mâš ï¸  [WARNING]\033[0m $1"
}
line() {
    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
}

# Uninstall rusty_palette â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
line
log "Uninstalling the app"
cargo uninstall rusty_palette
success "rusty_palette was uninstalled successfully"
line

# Remove themes and config import â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log "Deleting theme folders from the packages .config folder"
line
sed -i '/general\.import = \["~\/\.config\/alacritty\/themes\/.*\.toml"\]/d' ~/.config/alacritty/alacritty.toml

configs=(
    alacritty
    btop
    rofi
    vesktop
)
for config in "${configs[@]}"; do
    rm -rf "$HOME/.config/$config/themes"
done

# Remove wallpapers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log "Deleting wallpapers from ~/wallpapers"
line
rm -rf ~/wallpapers

# Remove GTK themes â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log "Deleting GTK themes in /usr/share/themes/"
warn "might require root access"
line
themes=(
    catppuccin
    everblush
    gruvbox
    nord
    tokyonight
    dracula
    everforest
    kanagawa
    rose_pine
)
for theme in "${themes[@]}"; do
    sudo rm -rf "/usr/share/themes/$theme"
done
line

# Uninstall VSCodium extensions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log "Uninstalling Vscodium themes"
if command -v codium >/dev/null 2>&1; then
    extensions=(
        catppuccin.catppuccin-vsc
        dracula-theme.theme-dracula
        enkia.tokyo-night
        jdinhlife.gruvbox
        mangeshrex.everblush
        metaphore.kanagawa-vscode-color-theme
        mvllow.rose-pine
        sainnhe.everforest
    )
    for ext in "${extensions[@]}"; do
        codium --uninstall-extension "$ext"
    done
fi
line

# 5. Good lucks â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
warning "If you have configured neovim to use the themes, you might want to delete them from there as well"
line

success "Done!"
line
